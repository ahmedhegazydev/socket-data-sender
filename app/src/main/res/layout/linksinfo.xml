<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:id="@+id/sv_links_info"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#42000000"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:id="@+id/ll_links_info"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:weightSum="10"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:text="How to use"
            android:textColor="#ff000000"
            android:textSize="@dimen/abc_text_size_large_material"></TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:inputType="none"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="1. Make sure the device you are going to chat with is paired to yours, if it is not then you can pair with it from within this app"
            android:textColor="#ff000000"
            android:textSize="@dimen/abc_text_size_large_material" />

        <TextView
            android:id="@+id/edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:inputType="none"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="2. With the app running on both devices, one should initiate a connection to the other"
            android:textColor="#ff000000"
            android:textSize="@dimen/abc_text_size_large_material" />

        <TextView
            android:id="@+id/edit1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:inputType="none"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="3. Start chatting"
            android:textColor="#ff000000"
            android:textSize="@dimen/abc_text_size_large_material" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            android:text="How to chat with a PC"
            android:textColor="#ff000000"
            android:textSize="@dimen/abc_text_size_large_material">

        </TextView>

        <TextView
            android:id="@+id/wlefknj"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:inputType="none"
            android:text="1. Generate the PC client using this subroutine then send it to your PC"
            android:textColor="#ff000000"
            android:textSize="@dimen/abc_text_size_large_material" />

        <Button
            android:id="@+id/generateActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Generate" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:inputType="none"
            android:text="Or Download the client for both windows and mac from"
            android:textColor="#ff000000"
            android:textSize="@dimen/abc_text_size_large_material" />

        <TextView
            android:id="@+id/editText3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:editable="false"
            android:text="@string/link3"
            android:textSize="@dimen/abc_text_size_large_material" />

        <TextView
            android:id="@+id/editText10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:editable="false"
            android:text="@string/link4"
            android:textSize="@dimen/abc_text_size_large_material" />

        <TextView
            android:id="@+id/editText4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:inputType="none"
            android:text="2. Run the BTM Chat.jar on your PC or the BTM Chat.exe with administrator privilages "
            android:textColor="#ff000000"
            android:textSize="@dimen/abc_text_size_large_material" />

        <TextView
            android:id="@+id/editText5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:inputType="none"
            android:text="3. Click on the 'Begin Recieving' button"
            android:textColor="#ff000000"
            android:textSize="@dimen/abc_text_size_large_material" />

        <TextView
            android:id="@+id/editText6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:inputType="none"
            android:text="4. Connect to the PC from the devices menu just as you would connect to a phone and begin chatting"
            android:textColor="#ff000000"
            android:textSize="@dimen/abc_text_size_large_material" />

        <TextView
            android:id="@+id/editText7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:inputType="none"
            android:text="5. You can also copy your messages or any other text from anywhere on your android phone to your computer wirelessly "
            android:textColor="#ff000000"
            android:textSize="@dimen/abc_text_size_large_material" />

        <fragment
            android:name="com.mungujn.sendtext.MainAct$PlaceholderFragment"
            android:layout_width="40dp"
            android:layout_height="40dp"
            tools:layout="@layout/fragmentmy">

        </fragment>

        <TextView
            android:id="@+id/iyhlkugtj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:inputType="none"
            android:text="If you like this app, Rate it on Play Store"
            android:textColor="#ff000000"
            android:textSize="@dimen/abc_text_size_large_material" />

        <Button
            android:id="@+id/rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="40dp"
            android:text="Rate" />

    </LinearLayout>
</ScrollView>